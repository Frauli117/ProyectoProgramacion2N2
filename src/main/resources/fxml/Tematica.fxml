<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@../styles/tematica.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controllers.TematicaController">

    <children>

        <Label layoutX="300" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Temáticas" />

        <GridPane hgap="10" layoutX="221.0" layoutY="63.0" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Sala:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="cbSala" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Características:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtCaracteristicas" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Época:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtEpoca" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox layoutX="265.0" layoutY="221.0" spacing="10">
            <Button fx:id="btnAgregar" text="Agregar" />
            <Button fx:id="btnModificar" text="Modificar" />
            <Button fx:id="btnEliminar" text="Eliminar" />
            <Button fx:id="btnLimpiar" text="Limpiar" />
        </HBox>

        <TableView fx:id="tableTematicas" layoutX="40" layoutY="287.0" prefHeight="253.0" prefWidth="720">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colCaracteristicas" prefWidth="220" text="Características" />
                <TableColumn fx:id="colEpoca" prefWidth="120" text="Época" />
                <TableColumn fx:id="colSala" prefWidth="150" text="Sala" />
            </columns>
        </TableView>

    </children>
</AnchorPane>
